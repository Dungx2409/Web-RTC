# Vercel Deployment Configuration
# Docs: https://vercel.com/docs/project-configuration

{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "env": {
    "VITE_SIGNALING_URL": {
      "description": "WebSocket signaling server URL (wss://your-server.onrender.com)",
      "required": true
    },
    "VITE_TURN_UDP_URL": {
      "description": "TURN server UDP URL (turn:YOUR_VPS_IP:3478?transport=udp)",
      "required": true
    },
    "VITE_TURN_TCP_URL": {
      "description": "TURN server TCP URL (turn:YOUR_VPS_IP:3478?transport=tcp)",
      "required": true
    },
    "VITE_TURN_TLS_URL": {
      "description": "TURN server TLS URL (turns:YOUR_VPS_IP:5349?transport=tcp)",
      "required": true
    },
    "VITE_TURN_USERNAME": {
      "description": "TURN server username",
      "required": true
    },
    "VITE_TURN_PASSWORD": {
      "description": "TURN server password",
      "required": true
    },
    "VITE_STUN_URL": {
      "description": "STUN server URL",
      "value": "stun:stun.l.google.com:19302"
    },
    "VITE_P2P_TIMEOUT": {
      "description": "P2P timeout in milliseconds before TURN fallback",
      "value": "10000"
    }
  }
}
